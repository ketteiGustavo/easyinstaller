# .editorconfig
root = true

# ===== Regra padrão (vale para tudo que não tiver seção específica) =====
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ===== PYTHON =====
[*.py]
indent_style = space
indent_size = 4

# ===== YAML (pubspec.yaml, análises etc.) =====
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# ===== JSON/JSONC =====
[*.json]
indent_style = space
indent_size = 2

[*.jsonc]
indent_style = space
indent_size = 2

# ===== Markdown =====
# Mantém espaços à direita (útil para quebras de linha e tabelas)
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# ===== Shell / Scripts =====
[*.sh]
indent_style = space
indent_size = 2

# ===== Ignore específicos (se quiser) =====

